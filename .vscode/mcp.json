{
    "servers": {
        "serena": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "--from",
                "git+https://github.com/oraios/serena",
                "serena",
                "start-mcp-server",
                "--context",
                "ide",
                "--project",
               "${workspaceFolder}"
            ]
        },
        "deepwiki": {
            "type": "http",
            "url": "https://mcp.deepwiki.com/mcp"
        },
        "mongodb": {
            "type": "stdio",
            "command": "npx",
            "args": ["-y", "mongodb-mcp-server@latest", "--readOnly"],
            "env": {
                "MDB_MCP_CONNECTION_STRING": "mongodb://localhost:27017/booklibrary"
            }
        }
    }
}